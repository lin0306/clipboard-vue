{
  "name": "clipboard",
  "private": true,
  "version": "0.0.3-beta",
  "description": "Clipboard",
  "author": "lin",
  "scripts": {
    "dev": "vite",
    "prebuild": "rimraf release && rimraf dist",
    "build": "vue-tsc && vite build && electron-builder",
    "build:mac": "vue-tsc && vite build && electron-builder --mac",
    "build:win": "vue-tsc && vite build && electron-builder --win",
    "preview": "vite preview",
    "analyze": "vite build --mode analyze",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@ckpack/vue-color": "^1.6.0",
    "ant-design-vue": "^4.2.6",
    "better-sqlite3": "^11.8.1",
    "bindings": "^1.5.0",
    "colord": "^2.9.3",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "^11.3.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.0.4",
    "babel-plugin-import": "^1.13.8",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "prebuild-install": "^7.1.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "terser": "^5.39.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.lin.clipboard",
    "productName": "Clipboard",
    "asar": true,
    "compression": "maximum",
    "afterPack": "build-config/removeLocales.js",
    "artifactName": "clipboard-${os}-${arch}-${version}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "directories": {
      "output": "release/${os}"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/logo.icns",
      "publish": [
        "github"
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "background": null,
      "title": "Clipboard",
      "icon": "public/logo.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "sign": false,
      "writeUpdateInfo": false,
      "format": "UDZO"
    },
    "win": {
      "icon": "public/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "guid": "Clipboard",
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "installerHeaderIcon": "public/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "LICENSE.txt",
      "include": "build-config/installer.nsh"
    },
    "extraResources": [
      {
        "from": "config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules",
      "node_modules/better-sqlite3",
      "node_modules/bindings",
      "node_modules/file-uri-to-path"
    ],
    "publish": {
      "provider": "github",
      "owner": "lin0306",
      "repo": "clipboard-vue",
      "releaseType": "prerelease",
      "private": false,
      "publishAutoUpdate": true,
      "vPrefixedTagName": true
    }
  }
}
